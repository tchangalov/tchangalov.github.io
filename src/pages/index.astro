---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <div class="pb-12 mt-5">
    <img src="/profile.drawio.png" width="600"></img>
    <div class="py-4">
      <h1 class="text-2xl font-bold mb-3 text-primary">Hello! ðŸ‘‹ I'm Ivelin</h1>
      <p class="text-lg leading-relaxed">I'm a <strong>Lead Software Engineer at FINRA</strong> with 7+ years of experience in financial technology and market regulation. I work on managing massive-scale data systems that process <strong>100 billion records daily</strong> for market surveillance, while implementing enterprise software engineering best practices.</p>
      <p class="text-lg leading-relaxed mt-3">I am now offering <strong>customized services</strong> to help organizations build robust, scalable solutions with the same level of excellence I bring to financial markets.</p>
    </div>
    <div class="mt-8">
      <a class="btn mb-2" href="https://linkedin.com/in/tchangalov" target="_blank">Linkedin</a>
      <a class="btn mb-2" href="/products-and-services/" target="_blank">Products & Services</a>
      <a class="btn mb-2" href="/portfolio" target="_blank">Portfolio</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from <u><a href="/blog" target="_blank">blog</a></u></div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_blank"
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
